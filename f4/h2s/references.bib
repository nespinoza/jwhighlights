}

@article{evans_deep_2013,
	title = {The deep blue color of {HD} 189733b: albedo measurements with {\textless}{I}{\textgreater}{Hubble} space telescope{\textless}/{I}{\textgreater} /space telescope imaging spectrograph at visible wavelengths},
