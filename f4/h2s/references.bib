	journal = {The Astronomical Journal},
	author = {Mansfield, Megan and Bean, Jacob L. and Line, Michael R. and Parmentier, Vivien and Kreidberg, Laura and Desert, Jean-Michel and Fortney, Jonathan J. and Stevenson, Kevin B. and Arcangeli, Jacob and Dragomir, Diana},
