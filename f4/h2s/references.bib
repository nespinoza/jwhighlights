	pages = {5701--5726},
}

@article{suarez_ultracool_2023,
	title = {Ultracool dwarfs observed with the \textit{{Spitzer}} {Infrared} {Spectrograph} – {III}. {Dust} grains in young {L} dwarf atmospheres are heavier},
