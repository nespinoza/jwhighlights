	journal = {The Astrophysical Journal},
	author = {Cubillos, Patricio and Harrington, Joseph and Madhusudhan, Nikku and Stevenson, Kevin B. and Hardy, Ryan A. and Blecic, Jasmina and Anderson, David R. and Hardin, Matthew and Campo, Christopher J.},
