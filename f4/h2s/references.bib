	number = {2},
	urldate = {2024-05-23},
	journal = {The Astrophysical Journal},
	author = {Mukherjee, Sagnick and Batalha, Natasha E. and Fortney, Jonathan J. and Marley, Mark S.},
	month = jan,
	year = {2023},
	pages = {71},
}

