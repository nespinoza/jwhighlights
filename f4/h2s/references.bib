@article{casasayas-barris_atmospheric_2019,
	title = {Atmospheric characterization of the ultra-hot {Jupiter} {MASCARA}-2b/{KELT}-20b: {Detection} of {CaII}, {FeII}, {NaI}, and the {Balmer} series of {H} ({H} \textit{α} , {H} \textit{β} , and {H} \textit{γ} ) with high-dispersion transit spectroscopy},
