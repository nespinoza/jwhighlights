	number = {3},
	urldate = {2023-11-14},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Huitson, C. M. and Sing, D. K. and Vidal-Madjar, A. and Ballester, G. E. and Lecavelier Des Etangs, A. and Désert, J.-M. and Pont, F.},
