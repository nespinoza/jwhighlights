	number = {3},
	urldate = {2022-04-22},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Sing, D. K. and Wakeford, H. R. and Showman, A. P. and Nikolov, N. and Fortney, J. J. and Burrows, A. S. and Ballester, G. E. and Deming, D. and Aigrain, S. and Désert, J.-M. and Gibson, N. P. and Henry, G. W. and Knutson, H. and Lecavelier des Etangs, A. and Pont, F. and Vidal-Madjar, A. and Williamson, M. W. and Wilson, P. A.},
