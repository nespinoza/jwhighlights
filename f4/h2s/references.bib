@article{visscher_atmospheric_2010,
	title = {Atmospheric {Chemistry} in {Giant} {Planets}, {Brown} {Dwarfs}, and {Low}-{Mass} {Dwarf} {Stars} {III}. {Iron}, {Magnesium}, and {Silicon}},
