	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Awiphan, S. and Kerins, E. and Pichadee, S. and Komonjinda, S. and Dhillon, V. S. and Rujopakarn, W. and Poshyachinda, S. and Marsh, T. R. and Reichart, D. E. and Ivarsen, K. M. and Haislip, J. B.},
