	author = {Fu, Guangwei and Sing, David K. and Lothringer, Joshua D. and Deming, Drake and Ih, Jegug and Kempton, Eliza M. -R. and Malik, Matej and Komacek, Thaddeus D. and Mansfield, Megan and Bean, Jacob L.},
