	journal = {arXiv:2201.08759 [astro-ph]},
	author = {Yan, F. and Reiners, A. and Pallé, E. and Shulyak, D. and Stangret, M. and Molaverdikhani, K. and Nortmann, L. and Mollière, P. and Henning, Th and Casasayas-Barris, N. and Cont, D. and Chen, G. and Czesla, S. and Sánchez-López, A. and López-Puertas, M. and Ribas, I. and Quirrenbach, A. and Caballero, J. A. and Amado, P. J. and Galadí-Enríquez, D. and Khalafinejad, S. and Lara, L. M. and Montes, D. and Morello, G. and Nagel, E. and Sedaghati, E. and Osorio, M. R. Zapatero and Zechmeister, M.},
