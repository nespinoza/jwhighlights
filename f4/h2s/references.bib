	journal = {The Astrophysical Journal Supplement Series},
	author = {Li, Gang and Gordon, Iouli E. and Rothman, Laurence S. and Tan, Yan and Hu, Shui-Ming and Kassi, Samir and Campargue, Alain and Medvedev, Emile S.},
