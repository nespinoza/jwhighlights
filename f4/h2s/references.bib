	journal = {Astronomy \& Astrophysics},
	author = {Parmentier, Vivien and Line, Mike R. and Bean, Jacob L. and Mansfield, Megan and Kreidberg, Laura and Lupu, Roxana and Visscher, Channon and Desert, Jean-Michel and Fortney, Jonathan J. and Deleuil, Magalie and Arcangeli, Jacob and Showman, Adam P. and Marley, Mark S.},
