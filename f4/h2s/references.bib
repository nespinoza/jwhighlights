	author = {Batalha, Natasha E. and Mandell, Avi and Pontoppidan, Klaus and Stevenson, Kevin B. and Lewis, Nikole K. and Kalirai, Jason and Greene, Thomas and Albert, Loïc and Nielsen, Louise D. and Earl, Nick},
