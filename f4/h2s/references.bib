	journal = {The Astrophysical Journal},
	author = {Kreidberg, Laura and Bean, Jacob L. and Désert, Jean-Michel and Line, Michael R. and Fortney, Jonathan J. and Madhusudhan, Nikku and Stevenson, Kevin B. and Showman, Adam P. and Charbonneau, David and McCullough, Peter R. and Seager, Sara and Burrows, Adam and Henry, Gregory W. and Williamson, Michael and Kataria, Tiffany and Homeier, Derek},
