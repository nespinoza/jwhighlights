	author = {Ehrenreich, D. and Bourrier, V. and Bonfils, X. and Lecavelier Des Etangs, A. and Hébrard, G. and Sing, D. K. and Wheatley, P. J. and Vidal-Madjar, A. and Delfosse, X. and Udry, S. and Forveille, T. and Moutou, C.},
