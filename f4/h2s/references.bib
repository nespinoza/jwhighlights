	urldate = {2023-12-04},
	journal = {The Astrophysical Journal},
	author = {Berta, Zachory K. and Charbonneau, David and Désert, Jean-Michel and Miller-Ricci Kempton, Eliza and McCullough, Peter R. and Burke, Christopher J. and Fortney, Jonathan J. and Irwin, Jonathan and Nutzman, Philip and Homeier, Derek},
	month = mar,
