	journal = {The Astronomical Journal},
	author = {Chachan, Yayaati and Jontof-Hutter, Daniel and Knutson, Heather A. and Adams, Danica and Gao, Peter and Benneke, Björn and Berta-Thompson, Zachory and Dai, Fei and Deming, Drake and Ford, Eric and Lee, Eve J. and Libby-Roberts, Jessica E. and Madhusudhan, Nikku and Wakeford, Hannah R. and Wong, Ian},
