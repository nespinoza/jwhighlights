@article{li_rovibrational_2015,
	title = {{ROVIBRATIONAL} {LINE} {LISTS} {FOR} {NINE} {ISOTOPOLOGUES} {OF} {THE} {CO} {MOLECULE} {IN} {THE} {X1Σ}+ {GROUND} {ELECTRONIC} {STATE}},
