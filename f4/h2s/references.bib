	journal = {Astronomy \& Astrophysics},
	author = {Lis, Dariusz C. and Bockelée-Morvan, Dominique and Güsten, Rolf and Biver, Nicolas and Stutzki, Jürgen and Delorme, Yan and Durán, Carlos and Wiesemeyer, Helmut and Okada, Yoko},
