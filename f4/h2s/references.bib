	urldate = {2023-11-15},
	journal = {The Astronomical Journal},
	author = {Kunimoto, Michelle and Matthews, Jaymie M.},
	month = may,
	year = {2020},
	pages = {248},
}

@article{huitson_temperature-pressure_2012,
	title = {Temperature-pressure profile of the hot {Jupiter} {HD} 189733b from {HST} sodium observations: detection of upper atmospheric heating: {T}-{P} profile for {HD} 189733b},
	volume = {422},
	issn = {00358711},
	shorttitle = {Temperature-pressure profile of the hot {Jupiter} {HD} 189733b from {HST} sodium observations},
