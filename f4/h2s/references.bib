	journal = {The Astronomical Journal},
	author = {Sheppard, Kyle B. and Welbanks, Luis and Mandell, Avi and Madhusudhan, Nikku and Nikolov, Nikolay and Deming, Drake and Henry, Gregory W. and Williamson, Michael H. and Sing, David K. and López-Morales, Mercedes and Ih, Jegug and Sanz-Forcada, Jorge and Lavvas, Panayotis and Ballester, Gilda E. and Evans, Thomas M. and Muñoz, Antonio García and Santos, Leonardo A. Dos},
