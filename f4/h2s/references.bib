}

@article{rodriguez_eccentric_2019,
	title = {An {Eccentric} {Massive} {Jupiter} {Orbiting} a {Sub}-{Giant} on a 9.5 {Day} {Period} {Discovered} in the {Transiting} {Exoplanet} {Survey} {Satellite} {Full} {Frame} {Images}},
	volume = {157},
